{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@client-apps/custom-element": ["libs/custom-element/src/index.ts"],
      "@client-apps/custom-elements": ["libs/custom-elements/src/index.ts"],
      "@myorg/my-elements": ["libs/my-elements/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
